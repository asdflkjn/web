	// #2. var 명령어 생략시
	
	scope = '글로벌변수'; //var를 생략하면 모든 변수를 글로벌변수로 취급
	function getValue(){
		scope = '지역변수';
		return scope;
	}
	
	document.write('1>'+getValue()); //지역변수
	document.write('2>'+scope); //지역변수
	
	
	

	//날짜형 계산
	let today = new Date(); //날짜형 변수 today가 만들어진다.
	//10일 뒤 날짜 계산
	today.setDate(today.getDate()+10);
	document.writeln( today.toLocaleString()  + '<br/>'); 
	//20일 전 날짜 계산
	today.setDate(today.getDate()-20);
	document.writeln( today.toLocaleString()  + '<br/>'); 
	//3개월 후 날짜 계산
	today.setDate(today.setMonth(today+3));
	document.writeln( today.toLocaleString()  + '<br/>'); 
	
	
